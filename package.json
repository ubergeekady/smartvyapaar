{
  "name": "smartvyapaar",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-elevation": "^2.0.0",
    "tailwindcss-fluid-type": "^2.0.7"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/tailwind.css -o ./css/main.css",
    "build:css:prod": "npx tailwindcss -i ./css/tailwind.css -o ./dist/css/main.css --minify",
    "watch:css": "npx tailwindcss -i ./css/tailwind.css -o ./css/main.css --watch",
    "dev": "npm run watch:css",
    "clean": "rm -rf dist",
    "copy:html": "cp index.html dist/",
    "copy:assets": "cp -r public/* dist/ 2>/dev/null || true",
    "create:dirs": "mkdir -p dist/css",
    "build": "npm run clean && npm run create:dirs && npm run build:css:prod && npm run copy:html && npm run copy:assets",
    "serve": "npx http-server dist -p 8080 -o"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "http-server": "^14.1.1"
  }
}